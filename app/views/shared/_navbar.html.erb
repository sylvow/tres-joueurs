<div class="navbar navbar-expand navbar-dark navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
        <% if user_signed_in? %>



          <li class="nav-item">
            <%= link_to "Trouver un jeu", meetings_path, class: "nav-link text-primary" %>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link"><%= current_user.username %></a>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% unless current_user.profile_picture.attached? %>
                <%= image_tag "profil.png", class: "avatar rounded-circle", alt: "dropdown menu" %>
              <% else %>
                <%= cl_image_tag current_user.profile_picture.key, class: "avatar rounded-circle", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Activités", requests_path, class: "dropdown-item" %>
              <%= link_to "Conversations", conversations_path, class: "dropdown-item" %>
              <%= link_to "Mes annonces", my_meetings_path, class: "dropdown-item" %>
              <%= link_to "Modifier mes informations", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item bg-danger" %>
            </div>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="nav-link" id="notificationsDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-bell"></i>
            <% if Request.where(meeting: current_user.meetings).count > (current_user.viewed_requests_count || 0) %>
              <span class="badge bg-danger"><%= Request.where(status: :interested).where(user: current_user).count %></span>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
              <a href="<%= requests_path %>" class="dropdown-item">
                Requests
                <% if Request.where(meeting: current_user.meetings).count > (current_user.viewed_requests_count || 0) %>
                  <span class="badge bg-danger">!</span>
                <% end %>
              </a>
              <a href="<%= conversations_path %>" class="dropdown-item">
                Messages
              </a>
              <% unless @notifications.nil? %>
                <% @notifications.each do |notif| %>
                  <a href="#" class="dropdown-item">
                    <small><%= notif.content %></small>
                  </a>
                <% end %>
              <% end %>
            </div>
<%# c'est ici que j'ai supprimé le code %>
        </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Trouver un jeu", meetings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Me connecter", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
