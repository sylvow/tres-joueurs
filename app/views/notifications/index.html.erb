<div class="container p-3 mt-3">
  <div class="row justify-content-center">
    <h1>Notifications</h1>
    <% if @sorted_notif.blank? %>
      <p>Vous n'avez aucune notification</p>
    <% else %>
      <% @sorted_notif.each do |notif| %>
        <% if notif.category == "new-message" %>
          <p><%= notif.content %>, <strong><%= link_to "voir", meeting_messages_path(notif.notifiable.meeting) %></strong> </p>
        <% elsif notif.category == "approved-request" %>
          <p><%= notif.content %>, <strong><%= link_to "voir", meeting_path(notif.notifiable.meeting) %></strong> </p>
        <% elsif notif.category == "pending-request" %>
          <p><%= notif.content %>, <strong><%= link_to "voir", meeting_path(notif.notifiable) %></strong> </p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
